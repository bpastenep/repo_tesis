<p id="notice"><%= notice %></p>


<div class="row">
   <div class="col-lg-12">
      <!-- Example Bar Chart Card-->
      <div class="card mb-3">
         <div class="card-header">
            <i class="fa fa-question-circle"></i> Pregunta
         </div>
         <div class="card-body">
            <div class="row">
               <div class="col-sm-12 my-auto">
                  <table class="table">
                     <thead>
                        <tr>
                           <th>Pregunta realizar</th>
                           <th>Tipo pregunta</th>
                           <th>Respuesta</th>
                           <th>Id imagen</th>
                           <th colspan="3"></th>
                        </tr>
                     </thead>
                     <tbody>
                        <% @pregunta.each do |preguntum| %>
                        <tr>
                           <td><%= preguntum.pregunta_realizar %></td>
                           <td><%= preguntum.tipo_pregunta %></td>
                           <td><%= preguntum.respuesta %></td>
                           <td><%= preguntum.id_imagen %></td>
                           <td>
                              <%= link_to "Ver", preguntum%>
                            </td> 
                            

                           <td>
                              <%= link_to edit_preguntum_path(preguntum), :class => "btn btn-secondary" do %>
                              <i class="fa fa-edit"></i>
                              <% end %>
                           </td>
                           <td>
                              <%= link_to preguntum, method: :delete, data: { confirm: 'EstÃ¡ seguro?' }, :class => "btn btn-danger" do %>
                              <i class="fa fa-remove"></i>
                              <% end %>
                           </td>
                        </tr>
                        <% end %>
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<%= link_to 'Agregar pregunta', new_preguntum_path, :class => "btn btn-primary" %>