<p id="notice"><%= notice %></p>

<br>

<div class="row">
   <div class="col-lg-12">
      <!-- Example Bar Chart Card-->
      <div class="card mb-3">
         <div class="card-header">
            <i class="fa fa-graduation-cap"></i> Programa
         </div>
         <div class="card-body">
            <div class="row">
               <div class="col-sm-12 my-auto">
                  <table class="table" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Version</th>
      <th>Unidades</th>
      <th>RDA's</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programas.each do |programa| %>
      <tr>
        <td><%= programa.nombre %></td>
        <td><%= programa.version %></td>
        <td>
        <% @rdas = HadRda.where(programa_id:  programa.id) %>
         <% @rdas.each do |rda| %>
            <%= rda.resultados_de_aprendizaje_id %>
         <%end%>

        </td>
        <td><%= link_to 'Mostrar', programa %></td>
        <td><%= link_to 'Editar', edit_programa_path(programa) %></td>
        <td><%= link_to 'Eliminar', programa, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el programa indicado?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

            </div>
         </div>
      </div>
   </div>
</div>

