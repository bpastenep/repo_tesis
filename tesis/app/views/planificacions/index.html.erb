<p id="notice"><%= notice %></p>

<h1>Planificacions</h1>

<table>
  <thead>
    <tr>
      <th>Fecha inicio</th>
      <th>Fecha termino</th>
      <th>Cantidad clases</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planificacions.each do |planificacion| %>
      <tr>
        <td><%= planificacion.fecha_inicio %></td>
        <td><%= planificacion.fecha_termino %></td>
        <td><%= planificacion.cantidad_clases %></td>
        <td><%= link_to 'Show', planificacion %></td>
        <td><%= link_to 'Edit', edit_planificacion_path(planificacion) %></td>
        <td><%= link_to 'Destroy', planificacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

