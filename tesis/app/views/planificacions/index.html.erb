<p id="notice"><%= notice %></p>

<h1>Planificaciones</h1>

    
    <!-- /#wrapper -->

<table  class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Fecha inicio</th>
      <th>Fecha termino</th>
      <th>Cantidad clases</th>
      <th colspan="3"> ¿Qué desea realizar?</th>
    </tr>
  </thead>

  <tbody>
    <% @planificacions.each do |planificacion| %>
      <tr>
        <td><%= planificacion.fecha_inicio %></td>
        <td><%= planificacion.fecha_termino %></td>
        <td><%= planificacion.cantidad_clases %></td>
        <td><%= planificacion.programa_id %></td>
        <td><%= link_to 'Ver', planificacion %></td>
        <td><%= link_to 'Editar', edit_planificacion_path(planificacion) %></td>
        <td><%= link_to 'Elimnar', planificacion, method: :delete, data: { confirm: 'Está seguro que desea eliminar la planificación?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva planificación', new_planificacion_path %>
