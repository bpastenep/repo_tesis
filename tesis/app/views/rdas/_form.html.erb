<div class="form-group">
  <%= form_for(rda) do |f| %>
    <% if rda.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(rda.errors.count, "error") %> prohibited this rda from being saved:</h2>

        <ul>
        <% rda.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :descripcion %>
      <br><br>
      <%= f.text_area :descripcion%>
    </div>

    <!-- Falta agregar que cuando venga de editar se carga el select en el programa ya seleccionado -->
    
      <div class="field">
      <% puts params %>
      <%= f.select(:programa_id) do %>
        <% @programas.each do |c| %>
          <%= content_tag(:option, c.nombre, value: c.id) %>
        <% end %>
      <% end %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

